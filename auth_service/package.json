{
  "name": "auth_service",
  "version": "1.0.0",
  "description": "Servicio de autenticaci√≥n con Node.js, Express y JWT",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "FORCE_COLOR=1  jest --coverage --colors --verbose",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration --runInBand --forceExit",
    "test:coverage:unit": "FORCE_COLOR=1 jest tests/unit --coverage --colors",
    "test:coverage:integration": "FORCE_COLOR=1  jest tests/integration --coverage --runInBand --colors --forceExit"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.9.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.3.4",
    "pg": "^8.11.3",
    "redis": "^5.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "dotenv-cli": "^8.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "supertest": "^7.1.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "coverageReporters": [
      "text",
      "lcov",
      "html",
      "text-summary"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/src/db/",
      "/src/models/",
      "/src/app.js",
      "/src/dao/",
      "/src/config/"
    ],
    "testTimeout": 10000
  }
}

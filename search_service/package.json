{
  "name": "search-service",
  "version": "1.0.0",
  "description": "Servicio de b√∫squeda con ElasticSearch para sistema de restaurantes",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "FORCE_COLOR=1  jest --coverage --colors --verbose",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration --runInBand --forceExit",
    "test:coverage:unit": "FORCE_COLOR=1 jest tests/unit --coverage --colors --verbose",
    "test:coverage:integration": "FORCE_COLOR=1  jest tests/integration --coverage --colors --verbose"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^8.9.0",
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "redis": "^4.6.11",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "dotenv-cli": "^8.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "supertest": "^7.1.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "coverageReporters": [
      "text",
      "lcov",
      "html",
      "text-summary"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/",
      "/src/init.js",         
      "/src/app.js",
      "/src/services/",
      "/src/config/"
    ],
    "testTimeout": 10000
  }
}
